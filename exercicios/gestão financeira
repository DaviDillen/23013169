#include <stdio.h>

int main() {
    float receita, despesa, saldo;

    // Solicitar ao usuário que insira uma receita e uma despesa
    printf("Digite o valor da receita: ");
    scanf("%f", &receita);
    printf("Digite o valor da despesa: ");
    scanf("%f", &despesa);

    // Calcular o saldo atualizado
    saldo = receita - despesa;

    // Exibir o saldo atualizado
    printf("O saldo atualizado é: %.2f\n", saldo);

    return 0;
}
